<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all__in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d2945"
    tools:context="com.Sam.samvel.pokerasstistant.All_In">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ALL IN!"
        android:textSize="30dp"
        android:textColor="#C0C0C0"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/AllIn"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="YOU WILL WIN"
        android:textSize="20dp"
        android:layout_below="@+id/AllIn"
        android:textColor="#C0C0C0"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_height="20dp"
        android:layout_width="50dp"
        android:text="AGAIN"
        android:textSize="10dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/button_bg_style"
        android:onClick="onAgain"
        android:id="@+id/butt_again"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />
</RelativeLayout>