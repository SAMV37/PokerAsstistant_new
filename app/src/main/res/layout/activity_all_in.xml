<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_all__in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d2945"
    tools:context="com.Sam.samvel.pokerasstistant.All_In">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ALL IN!"
        android:textSize="40dp"
        android:textColor="#C0C0C0"
        android:layout_marginTop="20dp"
        android:id="@+id/AllIn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="YOU WILL WIN"
        android:textSize="40dp"
        android:textColor="#C0C0C0"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/AllIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="AGAIN"
        android:background="@drawable/button_bg_style"
        android:onClick="onAgain"
        android:id="@+id/butt_again"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>