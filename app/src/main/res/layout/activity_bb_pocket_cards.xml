<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bb_pocket_cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d2945"
    android:orientation="vertical"
    tools:context="com.Sam.samvel.pokerasstistant.BB_pocket_cards">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_keyboard_backspace_white_48dp" />

    <TextView
        android:id="@+id/cardsquest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Where do you see your cards?"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30dp" />

    <Button
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/cardsquest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_design"
        android:text="QQ  KK  AA "
        android:textSize="30dp" />

    <Button
        android:id="@+id/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_design"
        android:text="JJ+  AQ+"
        android:textSize="30dp" />

    <Button
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_design"
        android:text="other"
        android:textSize="30dp" />
</LinearLayout>
